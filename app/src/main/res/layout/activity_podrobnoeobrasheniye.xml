<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/maincolor"
    tools:context=".MainActivity">

    <LinearLayout
        android:id="@+id/main_liner"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center">

        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="match_parent"
            android:layout_height="57dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageButton
                android:id="@+id/imageView6"
                android:layout_width="28dp"
                android:layout_height="22dp"
                android:layout_marginVertical="6dp"
                android:backgroundTint="@color/black21"
                app:srcCompat="@drawable/back"
                app:tint="#FFFFFF" />

            <TextView
                android:layout_width="210dp"
                android:layout_height="50dp"
                android:text="@string/My_massages"
                android:textColor="@color/white"
                android:textSize="25sp"
                android:layout_marginStart="5dp"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayout10"
            android:layout_width="370dp"
            android:layout_height="123dp"
            android:layout_marginBottom="15dp"
            app:layout_constraintBottom_toTopOf="@+id/linearLayout13"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@+id/linearLayout"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout">

            <androidx.cardview.widget.CardView
                android:id="@+id/cardView8"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                app:cardCornerRadius="20dp">

                <ImageView
                    android:id="@+id/imageView52"
                    android:layout_width="match_parent"
                    android:layout_height="209dp"
                    app:srcCompat="@drawable/street" />
            </androidx.cardview.widget.CardView>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayout13"
            android:layout_width="370dp"
            android:layout_height="310dp"
            android:layout_marginBottom="15dp"
            app:layout_constraintBottom_toTopOf="@+id/linearLayout15"
            app:layout_constraintEnd_toEndOf="@+id/linearLayout10"
            app:layout_constraintStart_toStartOf="@+id/linearLayout10"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout10">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="310dp"
                app:cardCornerRadius="30dp">

                <EditText
                    android:layout_width="350dp"
                    android:layout_height="70dp"
                    android:layout_marginHorizontal="10dp"
                    android:text="@string/names" />

                <EditText
                    android:layout_width="350dp"
                    android:layout_height="70dp"
                    android:layout_marginHorizontal="10dp"
                    android:layout_marginVertical="70dp"
                    android:text="@string/In_process" />

                <EditText
                    android:layout_width="350dp"
                    android:layout_height="70dp"
                    android:layout_marginHorizontal="10dp"
                    android:layout_marginVertical="140dp"
                    android:text="@string/sended_17_17" />

                <EditText
                    android:layout_width="350dp"
                    android:layout_height="70dp"
                    android:layout_marginHorizontal="10dp"
                    android:layout_marginVertical="210dp"
                    android:text="@string/Adress" />

            </androidx.cardview.widget.CardView>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayout15"
            android:layout_width="368dp"
            android:layout_height="188dp"
            android:layout_marginBottom="20dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/linearLayout13"
            app:layout_constraintStart_toStartOf="@+id/linearLayout13"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout13">

            <androidx.cardview.widget.CardView
                android:id="@+id/cardView10"
                android:layout_width="368dp"
                android:layout_height="188dp"
                app:cardCornerRadius="30dp"
                tools:layout_editor_absoluteX="22dp"
                tools:layout_editor_absoluteY="524dp">

                <TextView
                    android:id="@+id/textView"
                    android:layout_width="347dp"
                    android:layout_height="168dp"
                    android:layout_margin="10dp"
                    android:text="@string/text_obrasheniya"
                    android:textSize="20sp" />
            </androidx.cardview.widget.CardView>
        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>