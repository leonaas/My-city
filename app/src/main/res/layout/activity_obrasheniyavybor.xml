<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/maincolor"
    tools:context=".LoginActivity">

    <LinearLayout
        android:id="@+id/main_liner"
        android:layout_width="match_parent"
        android:layout_height="600dp"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/back"
                android:layout_width="27dp"
                android:layout_height="21dp"
                android:layout_marginVertical="6dp"
                android:backgroundTint="@color/black21"
                app:srcCompat="@drawable/back"
                app:tint="#FFFFFF" />

            <TextView
                android:layout_width="210dp"
                android:layout_height="50dp"
                android:text="@string/massage"
                android:textColor="@color/white"
                android:textSize="25sp" />

        </LinearLayout>

        <androidx.cardview.widget.CardView
            android:id="@id/cardView3"
            android:layout_width="372dp"
            android:layout_height="500dp"
            android:layout_marginTop="40dp"
            app:cardCornerRadius="20dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/linearLayout">

            <LinearLayout
                android:id="@+id/image"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/liner_image3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent">

                    <ImageView
                        android:id="@+id/imageVieww"
                        android:layout_width="125dp"
                        android:layout_height="95dp"
                        app:srcCompat="@drawable/street" />

                    <ImageView
                        android:id="@+id/imageView"
                        android:layout_width="130dp"
                        android:layout_height="95dp"
                        android:layout_marginStart="2dp"
                        app:srcCompat="@drawable/_111111111" />


                    <ImageView
                        android:id="@+id/imageVieww1"
                        android:layout_width="125dp"
                        android:layout_height="95dp"
                        android:layout_marginStart="2dp"
                        app:srcCompat="@drawable/bishkekvodokanal" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/liner_image"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent">

                    <ImageView
                        android:id="@+id/imageView45"
                        android:layout_width="125dp"
                        android:layout_height="95dp"
                        app:srcCompat="@drawable/street" />

                    <ImageView
                        android:id="@+id/imageView46"
                        android:layout_width="130dp"
                        android:layout_height="95dp"
                        android:layout_marginStart="2dp"
                        app:srcCompat="@drawable/_111111111" />


                    <ImageView
                        android:id="@+id/imageView47"
                        android:layout_width="125dp"
                        android:layout_height="95dp"
                        android:layout_marginStart="2dp"
                        app:srcCompat="@drawable/bishkekvodokanal" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/liner_image4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent">

                    <ImageView
                        android:id="@+id/imageVieww3"
                        android:layout_width="125dp"
                        android:layout_height="110dp"
                        app:srcCompat="@drawable/street2" />

                    <ImageView
                        android:id="@+id/imageVieww4"
                        android:layout_width="129dp"
                        android:layout_height="110dp"
                        android:layout_marginStart="2dp"
                        app:srcCompat="@drawable/street3" />

                    <ImageView
                        android:id="@+id/imageVieww5"
                        android:layout_width="125dp"
                        android:layout_height="110dp"
                        android:layout_marginStart="2dp"
                        app:srcCompat="@drawable/street4" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/liner_image2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:orientation="horizontal"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent">

                    <ImageView
                        android:id="@+id/imageView48"
                        android:layout_width="125dp"
                        android:layout_height="110dp"
                        app:srcCompat="@drawable/street2" />

                    <ImageView
                        android:id="@+id/imageView49"
                        android:layout_width="129dp"
                        android:layout_height="110dp"
                        android:layout_marginStart="2dp"
                        app:srcCompat="@drawable/street3" />

                    <ImageView
                        android:id="@+id/imageView50"
                        android:layout_width="125dp"
                        android:layout_height="110dp"
                        android:layout_marginStart="2dp"
                        app:srcCompat="@drawable/street4" />
                </LinearLayout>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:id="@+id/liner_text3"
            android:layout_width="366dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/cardView2" />

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>