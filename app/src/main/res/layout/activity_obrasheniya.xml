<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/maincolor"
    tools:context=".LoginActivity">

    <LinearLayout
        android:id="@+id/main_liner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="10dp">

        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageButton
                android:id="@+id/back"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_marginEnd="10dp"
                android:layout_marginStart="5dp"
                android:background="@color/black21"
                app:layout_constraintEnd_toStartOf="@+id/textView17"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/ic_stat_name2" />

            <TextView
                android:id="@+id/textView17"
                android:layout_width="210dp"
                android:layout_height="50dp"
                android:text="@string/massage"
                android:textColor="@color/white"
                android:textSize="25sp" />

        </LinearLayout>

        <androidx.cardview.widget.CardView
            android:id="@+id/cardView2"
            android:layout_width="372dp"
            android:layout_height="180dp"
            app:cardCornerRadius="20dp"
            android:layout_marginTop="20dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/linearLayout">

            <LinearLayout
                android:id="@+id/linearLayout8"
                android:layout_width="372dp"
                android:layout_height="170dp"
                android:layout_marginBottom="3dp"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/textView"
                    android:layout_width="287dp"
                    android:layout_height="120dp"
                    android:layout_margin="10dp"
                    android:text="@string/send_message"
                    android:textSize="20sp" />

                <androidx.cardview.widget.CardView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    app:cardCornerRadius="50dp">

                    <ImageButton
                        android:id="@+id/camera"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:background="@color/white"
                        app:srcCompat="@drawable/camera"
                        app:tint="@color/maincolor"
                        tools:layout_editor_absoluteX="85dp"
                        tools:layout_editor_absoluteY="616dp" />
                </androidx.cardview.widget.CardView>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:id="@+id/liner_text3"
            android:layout_width="366dp"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_marginTop="15dp"
            app:layout_constraintTop_toBottomOf="@id/cardView2">

            <LinearLayout
                android:id="@+id/liner_text"
                android:layout_width="366dp"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:orientation="horizontal"
                android:gravity="center"
                app:layout_constraintTop_toBottomOf="@id/cardView2"
                app:layout_goneMarginTop="10dp">

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="45dp"
                    android:layout_height="22dp"
                    android:text="@string/Adress"
                    android:textColor="@color/white" />

                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="100dp"
                    android:layout_height="22dp"
                    android:text="@string/Open_map"
                    android:textColor="@color/white"
                    android:layout_marginStart="220dp"/>
            </LinearLayout>

            <androidx.cardview.widget.CardView
                android:id="@+id/cardView6"
                android:layout_width="366dp"
                android:layout_height="69dp"
                app:cardBackgroundColor="#80FFFFFF"
                app:cardCornerRadius="20dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/liner_text">

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                </EditText>

            </androidx.cardview.widget.CardView>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/liner_tex2"
            android:layout_width="366dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_vertical"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/liner_text3"
            android:layout_marginTop="15dp">

            <TextView
                android:id="@+id/textView4"
                android:layout_width="90dp"
                android:layout_height="22dp"
                android:text="@string/House_Number"
                android:textColor="@color/white" />

            <androidx.cardview.widget.CardView
                android:id="@+id/cardView7"
                android:layout_width="366dp"
                android:layout_height="69dp"
                app:cardBackgroundColor="#80FFFFFF"
                app:cardCornerRadius="20dp">

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                </EditText>

            </androidx.cardview.widget.CardView>

        </LinearLayout>

        <androidx.cardview.widget.CardView
            android:id="@+id/cardView5"
            android:layout_width="280dp"
            android:layout_height="56dp"
            app:cardCornerRadius="20dp"
            android:layout_marginTop="15dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/liner_tex2">

            <Button
                android:id="@+id/button"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#00FFFFFF"
                android:text="@string/send_message"
                android:textColor="@color/blue" />

        </androidx.cardview.widget.CardView>

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>
