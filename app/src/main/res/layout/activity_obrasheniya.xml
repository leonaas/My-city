<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/maincolor"
    tools:context=".MainActivity">

    <LinearLayout
        android:id="@+id/linearLayout8"
        android:layout_width="372dp"
        android:layout_height="184dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="5dp"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/linearLayout"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout">

        <androidx.cardview.widget.CardView
            android:id="@+id/cardView2"
            android:layout_width="372dp"
            android:layout_height="184dp"
            app:cardCornerRadius="20dp"
            tools:layout_editor_absoluteX="1dp"
            tools:layout_editor_absoluteY="72dp">

            <TextView

                android:id="@+id/textView"
                android:layout_width="287dp"
                android:layout_height="168dp"
                android:layout_margin="10dp"
                android:text="@string/send_message"
                android:textSize="20sp" />

            <LinearLayout
                android:layout_width="40dp"
                android:layout_height="42dp"
                android:layout_marginHorizontal="315dp"
                android:layout_marginVertical="130dp"
                android:orientation="vertical"
                tools:layout_editor_absoluteX="125dp"
                tools:layout_editor_absoluteY="519dp">

                <androidx.cardview.widget.CardView
                    android:layout_width="40dp"
                    android:layout_height="41dp"
                    app:cardCornerRadius="50dp">

                    <ImageButton
                        android:id="@+id/imageButton2"
                        android:layout_width="40dp"
                        android:layout_height="41dp"
                        android:background="@color/white"
                        app:srcCompat="@drawable/camera"
                        app:tint="@color/maincolor"
                        tools:layout_editor_absoluteX="85dp"
                        tools:layout_editor_absoluteY="616dp" />
                </androidx.cardview.widget.CardView>
            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>


    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="271dp"
        android:layout_height="57dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="20dp"
        android:orientation="horizontal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/imageView6"
            android:layout_width="25dp"
            android:layout_height="wrap_content"
            android:layout_marginVertical="6dp"
            app:srcCompat="@drawable/back"
            app:tint="#FFFFFF" />

        <TextView
            android:layout_width="210dp"
            android:layout_height="50dp"
            android:text="@string/massage"
            android:textColor="@color/white"
            android:textSize="25sp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout3"
        android:layout_width="366dp"
        android:layout_height="69dp"
        android:layout_marginTop="10dp"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout7"
        app:layout_constraintEnd_toEndOf="@+id/linearLayout8"
        app:layout_constraintStart_toStartOf="@+id/linearLayout8"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout8">

        <androidx.cardview.widget.CardView
            android:id="@+id/cardView6"
            android:layout_width="366dp"
            android:layout_height="69dp"
            app:cardBackgroundColor="#80FFFFFF"
            app:cardCornerRadius="20dp">

        </androidx.cardview.widget.CardView>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout7"
        android:layout_width="366dp"
        android:layout_height="69dp"
        android:layout_marginTop="10dp"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout9"
        app:layout_constraintEnd_toEndOf="@+id/linearLayout3"
        app:layout_constraintStart_toStartOf="@+id/linearLayout3"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout3">

        <androidx.cardview.widget.CardView
            android:id="@+id/cardView7"
            android:layout_width="366dp"
            android:layout_height="69dp"
            app:cardBackgroundColor="#80FFFFFF"
            app:cardCornerRadius="20dp"
            tools:layout_editor_absoluteX="23dp"
            tools:layout_editor_absoluteY="407dp">

        </androidx.cardview.widget.CardView>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout9"
        android:layout_width="280dp"
        android:layout_height="56dp"
        android:layout_marginTop="100dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/linearLayout7"
        app:layout_constraintStart_toStartOf="@+id/linearLayout7"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout7">

        <androidx.cardview.widget.CardView
            android:id="@+id/cardView5"
            android:layout_width="280dp"
            android:layout_height="56dp"
            app:cardCornerRadius="20dp"
            tools:layout_editor_absoluteY="675dp">

            <Button
                android:id="@+id/button"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#00FFFFFF"
                android:text="@string/send_message"
                android:textColor="@color/blue"
                tools:layout_editor_absoluteX="97dp"
                tools:layout_editor_absoluteY="654dp" />

        </androidx.cardview.widget.CardView>
    </LinearLayout>

    <LinearLayout
        android:layout_width="90dp"
        android:layout_height="22dp"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout3"
        app:layout_constraintStart_toStartOf="@+id/linearLayout3">

        <TextView
            android:id="@+id/textView4"
            android:layout_width="90dp"
            android:layout_height="22dp"
            android:text="@string/House_Number"
            android:textColor="@color/white" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="100dp"
        android:layout_height="22dp"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout3"
        app:layout_constraintEnd_toEndOf="@+id/linearLayout3">

        <TextView
            android:id="@+id/textView3"
            android:layout_width="100dp"
            android:layout_height="22dp"
            android:text="@string/Open_map"
            android:textColor="@color/white" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="45dp"
        android:layout_height="22dp"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout7"
        app:layout_constraintStart_toStartOf="@+id/linearLayout7">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="45dp"
            android:layout_height="22dp"
            android:text="@string/Adress"
            android:textColor="@color/white" />
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>
